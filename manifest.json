{
    "manifest_version": 3,
    "name": "YouTube Playlist Time Enhancer",
    "version": "1.0",
    "description": "Enhances YouTube search results by displaying total playlist time.",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://ytplaylist-len.sharats.dev/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}